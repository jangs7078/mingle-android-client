<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout
            android:orientation="vertical"
            android:id="@+id/front"
            android:tag="front"
            style="@style/MyListFrontContent">
 
        <ImageView
                style="@style/UserListImage"
                android:layout_centerHorizontal="true"
                android:src="@android:drawable/ic_menu_gallery"
                android:id="@+id/user_pic"/>

        <TextView
            android:id="@+id/user_num"
            style="@style/MyListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_pic"
            android:layout_below="@+id/user_pic"
            android:layout_marginLeft="35dp" />

        <TextView
            android:id="@+id/user_comment"
            style="@style/MyListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_pic"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/user_num" />
 
    </RelativeLayout>
</FrameLayout>
